{% extends 'base.html.twig' %}

{% block title %}Produit{% endblock %}{# recup le nom du produit#}

{% block body %}
    <h1>Jsp</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Nom</th>
                <td>{{ produit.nom }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ produit.description }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ produit.prix }}</td>
            </tr>
            <tr>
                <th>Stock</th>
                <td>{{ produit.stock }}</td>
            </tr>
            <tr>
                <th>Photo</th>
                <td><img src='{{ asset("uploads/" ~ produit.photo )}}'/><td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_produit_all') }}">back to accueil</a>

    {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_SUPER_ADMIN')%}
    <a href="{{ path('app_produit_edit', {'id': produit.id}) }}" class="btn btn-warning">Modifier</a>

    <form method="post" action="{{ path('app_produit_delete', {'id': produit.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce produit ?');">
        <input type="hidden" name="csrf" value="{{ csrf_token('delete' ~ produit.id) }}">
        <button type="submit">Supprimer</button>
    </form>
    {% endif %}

    <h2>Forme de ContenuPanier</h2>

    {{ form(contenuPanierForm) }}

{% endblock %}