{% extends 'base.html.twig' %}

{% block title %}Commande{% endblock %}

{% block body %}
    <h1>Votre Commande</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Commande</th>
                <th>Produit</th>
                <th>Quantité</th>
            </tr>
        </thead>
        <tbody>
        {% for produit in panier %}
            <tr>
                <td>{{ produit.commandes.id }}</td>
                <td>{{ produit.produit.nom }}</td>
                <td>{{ produit.quantite ? produit.quantite|json_encode : '0' }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {% if commandes.dateachat %}
        <p>Cette commande a été payé le {{ commandes.dateachat.format('d-m-Y') }} à {{ commandes.dateachat.format('H:i') }} .</p>
    {% else %}
        {{ form(form) }}
    {% endif %}

{% endblock %}
